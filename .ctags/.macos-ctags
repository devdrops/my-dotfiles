--recurse=yes

--verbose=yes

--totals=yes

--exclude=.idea
--exclude=.git
--exclude=.github
--exclude=.gitkeep
--exclude=.gitignore
--exclude=.svn
--exclude=.dockerignore
--exclude=node_modules
--exclude=build
--exclude=vendor/*
--exclude=\*.html
--exclude=\*.out
--exclude=\*.yaml
--exclude=\*.yml
--exclude=\*.csv
--exclude=\*.min.js
--exclude=\*.min.css
--exclude=\*.json
--exclude=\*.xml
--exclude=\*.md
--exclude=\*.markdown
--exclude=\*.log
--exclude=\*.png
--exclude=\*.jpg
--exclude=\*.jpeg
--exclude=\*.bmp
--exclude=\*.gif
--exclude=\*.lock
--exclude=\*.dist
--exclude=LICENSE
--exclude=CODEOWNERS
--exclude=CHANGELOG
--exclude=Makefile
--exclude=makefile
--exclude=sonar-project.properties

--langdef=JSON
--langmap=JSON:.json

--langdef=YAML
--langmap=YAML:.yaml.yml

--langdef=Dockerfile
--langmap=Dockerfile:([Dd]ockerfile)

--langdef=Go
--langmap=Go:.go
--regex-Go=/func([ \t]+\([^)]+\))?[ \t]+([a-zA-Z0-9_]+)/\2/d,func/
--regex-Go=/var[ \t]+([a-zA-Z_][a-zA-Z0-9_]+)/\1/d,var/
--regex-Go=/type[ \t]+([a-zA-Z_][a-zA-Z0-9_]+)/\1/d,type/
