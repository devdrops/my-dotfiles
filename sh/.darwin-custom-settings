  "choose your next president using"
  "run naked with only your"
  "eat boiling rice along with"
  )
  declare -a THINGS=("a cat"
  "cat"
  "a dog"
  "dog"
  "boots"
  "hat"
  "keyboard"
  "bottle"
  "money"
  "a cactus"
  "butter"
  "bottle of Mountain Dew"
  "spoon"
  "fork"
  "laser gun"
  "corn"
  "head"
  "knife"
  "Limp Bizkit album"
  "Elvis costume"
  "Terminator poster"
  "Terminator"
  "Barbie doll"
  "poncho"
  "credit card"
  "bread"
  "typewriter"
  "machine gun"
  "cocaine"
  "bottle of 51"
  "scissors"
  "shark"
