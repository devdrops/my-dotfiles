#!/bin/bash

##################################
#
# DOT FILES INSTALLER
#
##################################

# Vim
rm -rf ~/.vim && \
  cp -a ./.vim ~/

# Git
cp -a ./git/.git* ~/

# tmux
cp -a ./tmux/.tmux.conf ~/.tmux.conf

# Oh My Zsh
cp ./zsh/.my-zsh-custom-settings ~/ && \
  grep -q -F 'source ~/.my-zsh-custom-settings' ~/.zshrc || echo "source ~/.my-zsh-custom-settings" >> ~/.zshrc

# tmuxinator
cp ./zsh/.tmuxinator-helper ~/

