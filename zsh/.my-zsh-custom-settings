#!/bin/bash

##################################
#
# CUSTOM SETTINGS FOR .zshrc
#
##################################

###################
# MY OWN FUNCTIONS
###################

# Go
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:$HOME/go/bin
export CGO_ENABLED=0

# Kotlin
export PATH=$PATH:$HOME/kotlinc/bin

# Gradle
export PATH=$PATH:$HOME/gradle-4.6/bin

# General functions
function  todayIs {
  echo 'TODAY IS: '`date +%^A`, `date +%^B`, `date +%F`
}
todayIs

function messageOfTheDay {
  echo $(curl -s -X GET 'http://api.forismatic.com/api/1.0/?method=getQuote&format=json&lang=en' | jq '.quoteText')
}
#messageOfTheDay

function currentDir {
  pwd | xclip
}
alias c="currentDir"
function goToDir {
  cd $(xclip -o)
}
alias gt="goToDir"

# Common aliases
alias ls="ls -lat --color"
alias xclip="xclip -selection clipboard"
alias expath="export PATH=$PATH:$(pwd)"

# Git
alias gc="git commit -S"

# Default text editor
export EDITOR=vim

# Random phrases
function randomPhrase {
  declare -a QUALITIES=("good" "bad" "great" "terrible" "nice" "tough")
  declare -a SITUATIONS=("wear red socks on lava when using a"
    "fishing sharks using your enemies with a"
    "find a treasure hidden in your"
    "read a book about psycopaths with a"
    "watch unicorns having sex using a"
    "learn how mummies use to cook people using a"
    "find an immigrant living inside your"
    "drink a lot of coffee with a"
    "drive a racing car along with a"
    "open a can of beans using a"
    "wear anti-radiation clothes using your"
    "see the sunrise at Chernobyl with a"
    "go to Mars using only your"
    "leave your house with only your"
    "travel to Spain riding a"
    "worship a God that looks like a"
    "create an statue of your"
    "watch Rick and Morty with your"
    "Get Schwifty using your"
    "learn a new recipe on how to cook"
    "fight aliens inside a"
    "watch a boring TV show along with your"
    "choose your next president using a"
    "run naked with only your"
  )
  declare -a THINGS=("cat"
    "dog"
    "boot"
    "hat"
    "keyboard"
    "bottle"
    "money"
    "butter"
    "bottle of Mountain Dew"
    "spoon"
    "fork"
    "laser gun"
    "corn"
    "head"
    "knife"
    "Limp Bizkit album"
    "Elvis costume"
    "Terminator poster"
    "Terminator"
    "Barbie doll"
    "poncho"
    "credit card"
    "bread"
    "typewriter"
    "machine gun"
    "cocaine"
    "bottle of 51"
    "scissors"
    "shark"
    "chainsaw"
    "Old Spice"
    "TNT"
    "cat"
    "pencil"
    "Apple Watch"
    "cellphone"
    "spear"
    "Batman costume"
  )

  foo=`shuf -i 1-${#QUALITIES[@]} -n 1`
  bar=`shuf -i 1-${#SITUATIONS[@]} -n 1`
  baz=`shuf -i 1-${#THINGS[@]} -n 1`

  echo "Today is a ${QUALITIES[$foo]} day to ${SITUATIONS[$bar]} ${THINGS[$baz]}."
}
randomPhrase




