#!/bin/bash

##################################
#
# TMUXINATOR HELPER
#
# Tasks:
#   - Install tmuxinator autocompletion
#     for both BASH and ZSH
#
##################################


function tmuxinatorCompletion {
  curl -s https://raw.githubusercontent.com/tmuxinator/tmuxinator/master/completion/tmuxinator.bash > ~/.tmuxinator.bash && \
    source ~/.tmuxinator.bash

  curl -s https://raw.githubusercontent.com/tmuxinator/tmuxinator/master/completion/tmuxinator.zsh > ~/.tmuxinator.zsh && \
    source ~/.tmuxinator.zsh
}
